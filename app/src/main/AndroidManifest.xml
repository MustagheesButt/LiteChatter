<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.litechatter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LiteChatterApplication"
        android:allowBackup="false"
        android:icon="@mipmap/litechatter_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/litechatter_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity
            android:name=".screens.chatroom.PrivateChatRoomActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".AuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>